@page
@model Ape.Areas.Identity.Pages.ManageRolesModel

@{
    ViewData["Title"] = "Manage User Roles";
}

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10">

                <form method="post">

                    <div class="card shadow">
                        <div class="card-header">
                            <h1 class="text-black mb-4 text-center">@ViewData["Title"]</h1>
                        </div>

                        @if (Model.UserToEdit != null)
                        {
                            <div class="card-body">
                                <h4 class="text-center">User: @Model.UserToEdit.UserName</h4>

                                @Html.AntiForgeryToken()

                                <input type="hidden" asp-for="UserId" />
                                <input type="hidden" asp-for="ReturnUrl" />

                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="row gx-0 justify-content-center">

                                    <div class="col-12 my-2">
                                        <h5 class="text-center">Select Roles</h5>
                                    </div>

                                    <div class="col-4">
                                        @if (Model.AllRoles != null && Model.AllRoles.Any())
                                        {
                                            @for (var i = 0; i < Model.AllRoles.Count; i++)
                                            {
                                                <div class="form-check">
                                                    <input type="hidden" asp-for="AllRoles[i].Value" />
                                                    @{
                                                        bool isAdminRole = Model.AllRoles[i].Value == "Admin";
                                                        bool disableCheckbox = isAdminRole && !Model.IsCurrentUserAdmin;
                                                    }
                                                    <input type="checkbox" asp-for="AllRoles[i].Selected"
                                                           class="form-check-input custom-checkbox-green"
                                                           id="role-@i"
                                                           data-role-name="@Model.AllRoles[i].Text"
                                                           disabled="@disableCheckbox" />
                                                    <label class="form-check-label" for="role-@i">
                                                        @Model.AllRoles[i].Text
                                                        @if (disableCheckbox)
                                                        {
                                                            <span class="text-muted small">(Admin only)</span>
                                                        }
                                                    </label>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <p>No roles available.</p>
                                        }
                                    </div>

                                </div>
                            </div>

                            <div class="card-footer d-grid py-4 gap-2">
                                <div class="row gx-0 justify-content-center">
                                    <div class="col-6 pe-2 text-center">
                                        <button type="submit" asp-page-handler="Cancel" class="btn btn-sm btn-secondary rounded-2 me-2 shadow">
                                            Cancel
                                        </button>
                                    </div>
                                    <div class="col-6 ps-2 text-center">
                                        <button type="submit" class="btn btn-sm btn-success rounded-2 me-2 shadow">
                                            Save
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p>User not found.</p>
                        }
                    </div>
                </form>

            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center align-items-center container" style="min-height: 50vh;">
        <div class="card rounded p-4 shadow" style="max-width: 400px;">
            <div class="card-body rounded-2 text-center">
                <p class="card-text pb-2">This is a secure admin area.</p>
                <a class="nav-link text-black fs-3" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

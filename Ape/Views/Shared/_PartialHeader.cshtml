@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject Ape.Services.SecureConfigurationService ConfigService

@{
    string siteName = await ConfigService.GetCredentialAsync("SITE_NAME") ?? "Ape";
}

<header>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">

            <!-- Clickable logo and site name to return home -->
            <a class="navbar-brand" asp-area="" asp-controller="Info" asp-action="Index">
                <img style="height: 40px;" src="~/images/site/SmallLogo.png" alt="" aria-hidden="true" /> @siteName
            </a>

            <!-- Navbar Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Items -->
            <div class="navbar-collapse collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto">

                    <!-- Welcome Dropdown -->
                    <li class="nav-item dropdown">

                        <!-- Welcome Dropdown toggle -->
                        <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Welcome
                        </a>

                        <ul class="dropdown-menu">

                            <!-- Home -->
                            <li><a class="dropdown-item" asp-area="" asp-controller="Info" asp-action="Index">Home</a></li>
                            
                            <!-- Image gallery -->
                            <li><a class="dropdown-item" asp-controller="Gallery" asp-action="Browse">Image Gallery</a></li>
                            
                            <!-- More Links-->
                            <li><a class="dropdown-item" asp-controller="Links" asp-action="MoreLinks">More Links</a></li>

                            <li><hr class="dropdown-divider" /></li>

                            <!-- About -->
                            <li><a class="dropdown-item" asp-controller="Info" asp-action="About">About</a></li>

                        </ul>
                    </li>
                    
                    <!-- Manage Dropdown (Admin and Manager) -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <!-- Manage Dropdown -->
                        <li class="nav-item dropdown">

                            <!-- Manage Dropdown toggle -->
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                Manage
                            </a>

                            <ul class="dropdown-menu ps-2" style="width: 250px;" data-bs-auto-close="outside">

                                <!-- Manage Members -->
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Users">
                                    👥 Members
                                    </a>
                                </li>

                                <!-- Active Members -->
                                <li><a class="dropdown-item" asp-controller="ActiveUsers" asp-action="Index">
                                        <span class="icon-pair" aria-hidden="true"><span>👥</span><span>⚡</span></span>Active Members
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <!-- Email Configuration Dropdown -->
                                <li class="nav-item dropdown">

                                    <!-- Email Configuration toggle -->
                                    <a class="dropdown-item dropdown-toggle" href="#" id="emailConfigDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                        Email Configuration
                                    </a>


                                    <ul class="dropdown-menu ms-2 ps-2" style="width: 230px;" aria-labelledby="emailConfigDropdown" data-bs-auto-close="outside">

                                        <!-- Contact Form Recipients -->
                                        <li><a class="dropdown-item" asp-controller="ContactFormSettings" asp-action="Index">Contact Form Recipients</a></li>

                                        <!-- Bar -->
                                        <li><hr class="dropdown-divider mx-2" /></li>

                                        <!-- Email Test -->
                                        <li><a class="dropdown-item" asp-controller="EmailTest" asp-action="Index">Email Test</a></li>

                                        <!-- Email Log -->
                                        <li><a class="dropdown-item" asp-controller="EmailLog" asp-action="Index">Email Log</a></li>

                                    </ul>
                                </li>

                                @if (User.IsInRole("Admin"))
                                {
                                    <!-- Admin Tools Dropdown -->
                                    <li class="nav-item dropdown">

                                        <!-- Admin Tools Dropdown toggle -->
                                        <a class="dropdown-item dropdown-toggle" href="#" id="adminToolsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            Admin Tools
                                        </a>

                                        <ul class="dropdown-menu ms-2 ps-2" style="width: 220px;" aria-labelledby="adminToolsDropdown" data-bs-auto-close="outside">
                                      
                                            <!-- System Credentials (Admin Only) -->
                                            <li><a class="dropdown-item" asp-controller="SystemCredentials" asp-action="Index">System Credentials</a></li>                                       

                                            <!-- Manage Roles -->
                                            <li><a class="dropdown-item" asp-area="Identity" asp-page="/RoleManagement">Manage Roles</a></li>

                                        </ul>

                                    </li> 
                                }

                            </ul>
                        </li>
                    }


                    <!-- Members Dropdown -->
                    @if (User.IsInRole("Member"))
                    {
                       
                        <li class="nav-item dropdown">

                            <!-- Members Dropdown toggle -->
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Members
                            </a>

                            <ul class="dropdown-menu">

                                <!-- Account Management -->
                                <li>
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                        Account Management
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <!-- Document Library -->
                                <li><a class="dropdown-item" asp-controller="Document" asp-action="Browse">Document Library</a></li>

                            </ul>
                        </li>
                    }


                    <!-- Contact -->
                    <li class="nav-item me-2">
                        <a class="nav-link text-light" asp-controller="Info" asp-action="Contact">Contact</a>
                    </li>

                    <!-- Login-out -->
                    <partial name="_LoginPartial" />

                </ul>
            </div>
        </div>
    </nav>
</header>

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject Ape.Services.SecureConfigurationService ConfigService

@{
    string siteName = await ConfigService.GetCredentialAsync("SITE_NAME") ?? "Ape";
}

<header>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-card-footer border-bottom box-shadow mb-md-3">
        <div class="container-fluid">

            <!-- Clickable logo and site name to return home -->
            <a class="navbar-brand" asp-area="" asp-controller="Info" asp-action="Index">
                <img style="height: 40px;" src="~/images/site/SmallLogo.png" alt="" aria-hidden="true" /> @siteName
            </a>

            <!-- Navbar Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Items -->
            <div class="navbar-collapse collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto">

                    <!-- Welcome Dropdown -->
                    <li class="nav-item dropdown">

                        <!-- Welcome Dropdown toggle -->
                        <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            🏠 Welcome
                        </a>

                        <ul class="dropdown-menu">

                            <!-- Welcome -->
                            <li><a class="dropdown-item" asp-area="" asp-controller="Info" asp-action="Index">🏠 Welcome</a></li>

                            <!-- About -->
                            <li><a class="dropdown-item" asp-controller="Info" asp-action="About"><i class="bi bi-info-circle-fill ms-1 me-2" style="color: #0dcaf0;"></i>About</a></li>

                            <li><hr class="dropdown-divider" /></li>

                            <!-- Image gallery -->
                            <li><a class="dropdown-item" asp-controller="Gallery" asp-action="Browse">🖼️ Galleries</a></li>
                            
                            <!-- More Links-->
                            <li><a class="dropdown-item" asp-controller="Links" asp-action="MoreLinks">🔗 More Links</a></li>

                            <li><hr class="dropdown-divider" /></li>

                            <!-- Shop -->
                            <li><a class="dropdown-item" asp-controller="Store" asp-action="Index"><i class="bi bi-shop me-1"></i>Shop</a></li>

                        </ul>
                    </li>

                    <!-- Cart Icon (logged-in users) -->
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3"></i>
                                <span id="cartBadge" class="store-cart-badge badge rounded-pill bg-danger" style="display:none;">0</span>
                            </a>
                        </li>
                    }
                    
                    <!-- Manage Dropdown (Admin and Manager) -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <!-- Manage Dropdown -->
                        <li class="nav-item dropdown">

                            <!-- Manage Dropdown toggle -->
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                ⚙️ Manage
                            </a>

                            <ul class="dropdown-menu ps-2" style="width: 250px;" data-bs-auto-close="outside">

                                <!-- Manage Users -->
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Users">
                                        👨‍👩‍👧 Manage Users
                                    </a>
                                </li>

                                <!-- Active Users -->
                                <li><a class="dropdown-item" asp-controller="ActiveUsers" asp-action="Index">
                                        <span class="icon-pair" aria-hidden="true"><span>👨‍👩‍👧</span><span>⚡</span></span>Active Users
                                    </a>
                                </li>

                                <!-- Store Admin -->
                                <li><a class="dropdown-item" asp-controller="StoreAdmin" asp-action="Index">
                                        <i class="bi bi-shop me-1"></i>Store Admin
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <!-- Email Configuration Dropdown -->
                                <li class="nav-item dropdown">

                                    <!-- Email Configuration toggle -->
                                    <a class="dropdown-item dropdown-toggle" href="#" id="emailConfigDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                        📧 Email Configuration
                                    </a>


                                    <ul class="dropdown-menu ms-2 ps-2" style="width: 240px;" aria-labelledby="emailConfigDropdown" data-bs-auto-close="outside">

                                        <!-- Contact Form Recipients -->
                                        <li>
                                            <a class="dropdown-item" asp-controller="ContactFormSettings" asp-action="Index">
                                                ✉️ Contact Form Recipients
                                            </a>
                                        </li>                                       

                                        <!-- Email Test -->
                                        <li>
                                            <a class="dropdown-item" asp-controller="EmailTest" asp-action="Index">
                                                📧 Email Test
                                            </a>
                                        </li>

                                        <!-- Bar -->
                                        <li><hr class="dropdown-divider mx-2" /></li>

                                        <!-- Email Log -->
                                        <li>
                                            <a class="dropdown-item" asp-controller="EmailLog" asp-action="Index">
                                                📋Email Activity Log
                                            </a>
                                        </li>

                                    </ul>
                                </li>

                                @if (User.IsInRole("Admin"))
                                {
                                    <!-- Admin Tools Dropdown -->
                                    <li class="nav-item dropdown">

                                        <!-- Admin Tools Dropdown toggle -->
                                        <a class="dropdown-item dropdown-toggle" href="#" id="adminToolsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            🔨 Admin Tools
                                        </a>

                                        <ul class="dropdown-menu ms-2 ps-2" style="width: 220px;" aria-labelledby="adminToolsDropdown" data-bs-auto-close="outside">
                                      
                                            <!-- System Credentials (Admin Only) -->
                                            <li>
                                                <a class="dropdown-item" asp-controller="SystemCredentials" asp-action="Index">
                                                    🔑 System Credentials
                                                </a>
                                            </li>

                                            <!-- Manage Roles -->
                                            <li>
                                                <a class="dropdown-item" asp-area="Identity" asp-page="/RoleManagement">
                                                    🔧 Manage Roles
                                                </a>
                                            </li>

                                        </ul>

                                    </li> 
                                }

                            </ul>
                        </li>
                    }


                    <!-- Members Dropdown -->
                    @if (User.IsInRole("Member"))
                    {
                       
                        <li class="nav-item dropdown">

                            <!-- Members Dropdown toggle -->
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                👨‍👩‍👧 Members
                            </a>

                            <ul class="dropdown-menu">

                                <!-- Document Library -->
                                <li>
                                    <a class="dropdown-item" asp-controller="Document" asp-action="Browse">
                                        📚 Document Library
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <!-- My Orders -->
                                <li>
                                    <a class="dropdown-item" asp-controller="OrderHistory" asp-action="Index">
                                        <i class="bi bi-receipt me-1"></i>My Orders
                                    </a>
                                </li>

                                <!-- My Subscription -->
                                <li>
                                    <a class="dropdown-item" asp-controller="Subscription" asp-action="Manage">
                                        <i class="bi bi-arrow-repeat me-1"></i>My Subscription
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <!-- Account Management -->
                                <li>
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                        ⚙️ Account Management
                                    </a>
                                </li>

                            </ul>
                        </li>
                    }


                    <!-- Contact -->
                    <li class="nav-item me-2">
                        <a class="nav-link text-light" asp-controller="Info" asp-action="Contact">📧 Contact</a>
                    </li>

                    <!-- Login-out -->
                    <partial name="_LoginPartial" />

                </ul>
            </div>
        </div>
    </nav>
</header>

<script>
    document.addEventListener('click', function(event) {
        var navbar = document.getElementById('navbarContent');
        var toggler = document.querySelector('.navbar-toggler');

        if (navbar && navbar.classList.contains('show')) {
            // Check if click is outside the navbar and toggler
            if (!navbar.contains(event.target) && !toggler.contains(event.target)) {
                var bsCollapse = bootstrap.Collapse.getInstance(navbar);
                if (bsCollapse) {
                    bsCollapse.hide();
                }
            }
        }
    });
</script>

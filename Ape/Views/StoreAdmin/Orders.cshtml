@model Ape.Models.ViewModels.AdminOrderListViewModel

<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-receipt"></i> Manage Orders</h2>
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Dashboard</a>
    </div>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-auto">
                    <label class="form-label small">Status</label>
                    <select name="status" class="form-select form-select-sm">
                        <option value="">All Statuses</option>
                        @foreach (var status in Enum.GetValues<Ape.Models.OrderStatus>())
                        {
                            <!option value="@((int)status)" @(Model.FilterStatus == status ? "selected" : "")>@status</!option>
                        }
                    </select>
                </div>
                <div class="col-auto">
                    <label class="form-label small">Search</label>
                    <input type="text" name="search" class="form-control form-control-sm" value="@Model.SearchQuery" placeholder="Order # or email..." />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-search"></i> Filter</button>
                    <a asp-action="Orders" class="btn btn-outline-secondary btn-sm">Clear</a>
                </div>
                <div class="col-auto ms-auto">
                    <span class="text-muted small">@Model.TotalCount order(s)</span>
                </div>
            </form>
        </div>
    </div>

    <!-- Orders Table -->
    @if (!Model.Orders.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-receipt display-4"></i>
            <p class="mt-2">No orders found.</p>
        </div>
    }
    else
    {
        <p class="text-muted"><em>Click any row to view order details</em></p>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Payment</th>
                        <th>Status</th>
                        <th>Tracking</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr class="clickable-row" data-href="@Url.Action("OrderDetail", new { id = order.OrderId })">
                            <td><strong>@order.OrderNumber</strong></td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @order.ItemCount
                                @if (order.HasPhysicalItems) { <i class="bi bi-box text-primary" title="Physical"></i> }
                                @if (order.HasDigitalItems) { <i class="bi bi-file-earmark-arrow-down text-info" title="Digital"></i> }
                            </td>
                            <td>@order.TotalAmount.ToString("C")</td>
                            <td>
                                @if (order.IsPaid)
                                {
                                    <span class="badge bg-success">@order.PaymentGateway</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unpaid</span>
                                }
                            </td>
                            <td><span class="badge @order.StatusBadgeClass">@order.Status</span></td>
                            <td>
                                @if (!string.IsNullOrEmpty(order.TrackingNumber))
                                {
                                    <small>@order.TrackingNumber</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination justify-content-center">
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Orders" asp-route-page="@i"
                               asp-route-status="@Model.FilterStatus" asp-route-search="@Model.SearchQuery">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />
    <style>
        tbody tr.clickable-row:hover {
            cursor: pointer;
            border: 2px solid green;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('tr.clickable-row').forEach(function (row) {
                row.addEventListener('click', function () {
                    var href = this.dataset.href;
                    if (href) window.location.href = href;
                });
            });
        });
    </script>
}

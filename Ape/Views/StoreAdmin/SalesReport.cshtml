@model Ape.Models.ViewModels.SalesReportViewModel

<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-graph-up"></i> Sales Report</h2>
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Dashboard</a>
    </div>

    <!-- Date Range Filter -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-auto">
                    <label class="form-label small">Start Date</label>
                    <input type="date" name="startDate" class="form-control form-control-sm" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-auto">
                    <label class="form-label small">End Date</label>
                    <input type="date" name="endDate" class="form-control form-control-sm" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-funnel"></i> Apply</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@Model.TotalRevenue.ToString("C")</h3>
                    <small>Total Revenue</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@Model.TotalOrders</h3>
                    <small>Total Orders</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@Model.AverageOrderValue.ToString("C")</h3>
                    <small>Average Order Value</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@(Model.PhysicalSales + Model.DigitalSales + Model.SubscriptionSales)</h3>
                    <small>Items Sold</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Revenue by Type -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header"><strong>Revenue by Product Type</strong></div>
                <div class="card-body">
                    <table class="table mb-0">
                        <thead><tr><th>Type</th><th>Sales</th><th>Revenue</th></tr></thead>
                        <tbody>
                            <tr>
                                <td><span class="badge bg-primary">Physical</span></td>
                                <td>@Model.PhysicalSales</td>
                                <td>@Model.PhysicalRevenue.ToString("C")</td>
                            </tr>
                            <tr>
                                <td><span class="badge bg-info">Digital</span></td>
                                <td>@Model.DigitalSales</td>
                                <td>@Model.DigitalRevenue.ToString("C")</td>
                            </tr>
                            <tr>
                                <td><span class="badge bg-success">Subscription</span></td>
                                <td>@Model.SubscriptionSales</td>
                                <td>@Model.SubscriptionRevenue.ToString("C")</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr class="fw-bold">
                                <td>Total</td>
                                <td>@(Model.PhysicalSales + Model.DigitalSales + Model.SubscriptionSales)</td>
                                <td>@Model.TotalRevenue.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Daily Sales -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header"><strong>Daily Sales</strong></div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.DailySales.Any())
                    {
                        <table class="table table-sm mb-0">
                            <thead><tr><th>Date</th><th>Orders</th><th>Revenue</th></tr></thead>
                            <tbody>
                                @foreach (var day in Model.DailySales.OrderByDescending(d => d.Date))
                                {
                                    <tr>
                                        <td>@day.Date.ToString("MMM dd, yyyy")</td>
                                        <td>@day.OrderCount</td>
                                        <td>@day.Revenue.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center">No sales data for this period.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />
}

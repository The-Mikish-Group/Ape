@{
    ViewData["Title"] = "Subscription Cancelled";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center py-5">
            <i class="bi bi-x-circle display-1 text-secondary"></i>
            <h2 class="mt-3">Subscription Cancelled</h2>
            <p class="text-muted">Your subscription has been cancelled. You can re-subscribe at any time.</p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-info">@TempData["SuccessMessage"]</div>
            }

            <div class="mt-4">
                <a asp-controller="Store" asp-action="Browse" asp-route-type="2" class="btn btn-success me-2">
                    <i class="bi bi-star"></i> Re-subscribe
                </a>
                <a asp-controller="Store" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-shop"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />
}

@model Ape.Models.ViewModels.EditShippingAddressModel

<div class="container mt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Addresses">Addresses</a></li>
            <li class="breadcrumb-item active">Edit Address</li>
        </ol>
    </nav>

    <h2><i class="bi bi-pencil"></i> Edit Address</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditAddress" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="AddressId" value="@Model.AddressId" />
                <partial name="_AddressForm" model="new { FullName = Model.FullName, AddressLine1 = Model.AddressLine1, AddressLine2 = Model.AddressLine2, City = Model.City, State = Model.State, ZipCode = Model.ZipCode, Country = Model.Country, Phone = Model.Phone, IsDefault = Model.IsDefault }" />
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg"></i> Save Changes</button>
                <a asp-action="Addresses" class="btn btn-outline-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

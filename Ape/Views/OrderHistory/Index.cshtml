@model List<Ape.Models.ViewModels.OrderViewModel>
@{
    var subscription = ViewData["Subscription"] as Ape.Models.ViewModels.SubscriptionDetailViewModel;
}

<div class="container mt-3">
    <h2><i class="bi bi-receipt"></i> My Orders</h2>

    <div class="mb-3">
        <a asp-action="Addresses" class="btn btn-outline-secondary"><i class="bi bi-geo-alt"></i> Manage Addresses</a>
        <a asp-action="Downloads" class="btn btn-outline-info"><i class="bi bi-download"></i> My Downloads</a>
        <a asp-controller="Subscription" asp-action="Manage" class="btn btn-outline-success"><i class="bi bi-arrow-repeat"></i> My Subscription</a>
    </div>

    @if (subscription != null)
    {
        <div class="card mb-3 @(subscription.Status == Ape.Models.SubscriptionStatus.Active ? "border-success" : "border-secondary")">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <strong><i class="bi bi-arrow-repeat"></i> @subscription.ProductName</strong>
                    <span class="badge @subscription.StatusBadgeClass ms-2">@subscription.Status</span>
                    <div class="small text-muted mt-1">
                        @subscription.BillingDisplay via @subscription.PaymentGateway
                        @if (subscription.CurrentPeriodEnd.HasValue)
                        {
                            <text> &mdash; Renews @subscription.CurrentPeriodEnd.Value.ToString("MMM dd, yyyy")</text>
                        }
                    </div>
                </div>
                <a asp-controller="Subscription" asp-action="Manage" class="btn btn-sm btn-outline-success">Manage</a>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-receipt display-1"></i>
            <p class="mt-3">You haven't placed any orders yet.</p>
            <a asp-controller="Store" asp-action="Browse" class="btn btn-primary"><i class="bi bi-shop"></i> Start Shopping</a>
        </div>
    }
    else
    {
        <p class="m-0 text-muted"><em>Click any row to view order details</em></p>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Order</th>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Tracking</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr class="clickable-row" data-href="@Url.Action("Detail", new { id = order.OrderId })">
                            <td><strong>@order.OrderNumber</strong></td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @order.ItemCount item(s)
                                @if (order.HasPhysicalItems) { <span class="badge bg-primary ms-1">Physical</span> }
                                @if (order.HasDigitalItems) { <span class="badge bg-info ms-1">Digital</span> }
                            </td>
                            <td>@order.TotalAmount.ToString("C")</td>
                            <td><span class="badge @order.StatusBadgeClass">@order.Status</span></td>
                            <td>
                                @if (!string.IsNullOrEmpty(order.TrackingNumber))
                                {
                                    <small>@order.ShippingCarrier: @order.TrackingNumber</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />
    <style>
        tbody tr.clickable-row:hover {
            cursor: pointer;
            border: 2px solid green;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('tr.clickable-row').forEach(function (row) {
                row.addEventListener('click', function () {
                    var href = this.dataset.href;
                    if (href) window.location.href = href;
                });
            });
        });
    </script>
}

@model List<Ape.Models.ViewModels.GalleryCategoryTreeNode>
@using Ape.Models

@if (Model == null || !Model.Any())
{
    <div class="text-muted small p-2">No categories found</div>
}
else
{
    <ul class="category-tree list-unstyled mb-0">
        @foreach (var node in Model)
        {
            @await Html.PartialAsync("_CategoryTreeNode", node)
        }
    </ul>
}

<style>
    .category-tree {
        font-size: 0.9rem;
    }
    .category-tree ul {
        list-style: none;
        padding-left: 1rem;
        margin: 0;
    }
    .category-tree-item {
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        margin: 1px 0;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }
    .category-tree-item:hover {
        background-color: #e9ecef;
    }
    .category-tree-item.selected {
        background-color: #cfe2ff;
        font-weight: 500;
    }
    .category-tree-item a {
        color: inherit;
        text-decoration: none;
        flex: 1;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    .category-tree-item a:hover {
        color: #0d6efd;
    }
    .category-toggle {
        width: 16px;
        text-align: center;
        cursor: pointer;
        user-select: none;
        font-size: 0.7rem;
    }
    .category-icon {
        font-size: 0.9rem;
    }
    .category-restricted .category-icon {
        color: #ffc107;
    }
</style>

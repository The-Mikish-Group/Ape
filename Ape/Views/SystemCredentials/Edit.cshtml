@model Ape.Models.ViewModels.CredentialEditViewModel
@{
    ViewData["Title"] = "Edit Credential";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> Edit Credential
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="CredentialID" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CredentialName" class="form-control" placeholder="Credential Name" required />
                                    <label asp-for="CredentialName"></label>
                                    <span asp-validation-for="CredentialName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Category" class="form-select" required>
                                        @if (ViewBag.Categories is List<string> categories)
                                        {
                                            @foreach (var category in categories)
                                            {
                                                <!option value="@category" @(category == Model.Category ? "selected" : "")>@category</!option>
                                            }
                                        }
                                    </select>
                                    <label asp-for="Category"></label>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="CredentialKey" class="form-control" placeholder="Credential Key" readonly />
                            <label asp-for="CredentialKey"></label>
                            <small class="form-text text-muted">
                                Credential key cannot be changed (create new credential if needed)
                            </small>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="CredentialValue" class="form-control" placeholder="Credential Value"
                                      style="height: 100px;" required></textarea>
                            <label asp-for="CredentialValue"></label>
                            <span asp-validation-for="CredentialValue" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Update the credential value (will be re-encrypted)
                            </small>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Description"
                                      style="height: 80px;"></textarea>
                            <label asp-for="Description"></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                Active
                            </label>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i> <strong>Warning:</strong>
                            Changing this credential will affect all systems using it. Test the updated credential after saving.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Update Credential
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
